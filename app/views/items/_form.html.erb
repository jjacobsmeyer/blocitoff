<%= form_for [user, item], html: { class: "form-inline" } do |f| %>
  <% if item.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(item.errors.count, "error")%>.</h4>
      <ul>
        <% item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <%= form_group_tag(item.errors[:body]) do %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter item body" %>
    <% end %>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
<% end %>
